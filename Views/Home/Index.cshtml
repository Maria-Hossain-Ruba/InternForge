@{
    ViewData["Title"] = "InternForge – Modern project-based internships for Students & SMEs";
}

<div class="if-landing-root">
    <div class="if-landing-gradient-bg"></div>

    <div class="if-landing-page">
        <!-- HERO -->
        <section class="if-landing-hero">
            <div class="if-landing-hero-left">
                <div class="if-landing-pill">
                    <span>New</span>
                    <span>Project-style internships for Students & SMEs</span>
                </div>

                <h1 class="if-landing-hero-title">
                    Internships that ship
                    <span>real projects.</span>
                </h1>

                <p class="if-landing-hero-subtitle">
                    InternForge connects <strong>Students</strong> and <strong>SMEs</strong> in a modern,
                    project-based workspace – inspired by freelancing platforms, built for learning and delivery.
                </p>

                <div class="if-landing-hero-actions">
                    <a href="/Account/Register" class="if-landing-cta-primary">
                        🎓 Get started as Student
                    </a>
                    <a href="/Account/Register" class="if-landing-cta-secondary">
                        🏢 Get started as SME
                    </a>
                </div>

                <div class="if-landing-hero-meta">
                    <span>⚡ Live SME projects</span>
                    <span>📁 Portfolio & certificates</span>
                    <span>📊 Milestone-based progress</span>
                </div>
            </div>

            <div class="if-landing-hero-right">
                <div class="if-landing-hero-card if-landing-hero-card-main">
                    <div class="if-landing-hero-card-header">
                        <span class="if-landing-hero-chip">Live dashboard preview</span>
                        <span class="if-landing-hero-status-dot"></span>
                    </div>
                    <div class="if-landing-hero-card-body">
                        <div class="if-landing-hero-metrics">
                            <div class="if-landing-hero-metric-item">
                                <span class="if-landing-hero-metric-label">Active projects</span>
                                <span class="if-landing-hero-metric-value">3</span>
                            </div>
                            <div class="if-landing-hero-metric-item">
                                <span class="if-landing-hero-metric-label">Pending applications</span>
                                <span class="if-landing-hero-metric-value">7</span>
                            </div>
                            <div class="if-landing-hero-metric-item">
                                <span class="if-landing-hero-metric-label">Intern rating</span>
                                <span class="if-landing-hero-metric-value">4.8 ★</span>
                            </div>
                        </div>
                        <div class="if-landing-hero-mini-table">
                            <div class="if-landing-hero-mini-row">
                                <span>Student dashboard UI</span>
                                <span>Design • In progress</span>
                            </div>
                            <div class="if-landing-hero-mini-row">
                                <span>SME role pipeline</span>
                                <span>Backend • Planning</span>
                            </div>
                            <div class="if-landing-hero-mini-row">
                                <span>Certificates module</span>
                                <span>Product • Testing</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="if-landing-hero-tagline-card">
                    <p>
                        “InternForge feels like a small freelancing marketplace where
                        internships are real projects, not side tasks.”
                    </p>
                    <span>– Designed for Students & SMEs</span>
                </div>
            </div>
        </section>

        <!-- ROLES -->
        <section id="if-landing-roles" class="if-landing-section">
            <div class="if-landing-section-header">
                <h2>Two focused workspaces. One shared platform.</h2>
                <p>
                    InternForge separates student and SME views so each side gets the right tools without clutter,
                    while still working on the same project.
                </p>
            </div>

            <div class="if-landing-roles-grid">
                <article class="if-landing-role-card">
                    <div class="if-landing-role-pill">Student workspace</div>
                    <h3 class="if-landing-role-title">For Students</h3>
                    <p class="if-landing-role-text">
                        Discover scoped SME projects, apply with your profile, and track every milestone until delivery.
                    </p>
                    <ul class="if-landing-role-list">
                        <li>Dashboard for projects, applications, and tasks</li>
                        <li>Portfolio & certificates for each internship</li>
                        <li>Feedback from SMEs to show on your profile</li>
                    </ul>
                    <a href="/Account/Register" class="if-landing-role-link">Join as Student →</a>
                </article>

                <article class="if-landing-role-card">
                    <div class="if-landing-role-pill if-landing-role-pill-alt">SME workspace</div>
                    <h3 class="if-landing-role-title">For SMEs</h3>
                    <p class="if-landing-role-text">
                        Turn your backlog into clear internship projects and manage students like a modern SaaS dashboard.
                    </p>
                    <ul class="if-landing-role-list">
                        <li>Post project-style roles with outcomes</li>
                        <li>Review candidates and shortlist quickly</li>
                        <li>Monitor all active interns in one place</li>
                    </ul>
                    <a href="/Account/Register" class="if-landing-role-link">Join as SME →</a>
                </article>
            </div>
        </section>

        <!-- LIVE PROJECTS -->
        <section id="if-landing-projects" class="if-landing-section">
            <div class="if-landing-section-header">
                <h2>Example project briefs on InternForge</h2>
                <p>
                    Every internship on InternForge is written as a project – just like a freelance gig –
                    with clear scope, timeline, and skills.
                </p>
            </div>

            <div class="if-landing-projects-grid">
                <article class="if-landing-project-card">
                    <span class="if-landing-project-tag">Tech • Remote</span>
                    <h3 class="if-landing-project-title">Student dashboard for project marketplace</h3>
                    <p class="if-landing-project-text">
                        Build the student side of an internship marketplace using ASP.NET Core and Entity Framework,
                        including applications and portfolio sections.
                    </p>
                    <div class="if-landing-project-meta">
                        <span>Skills: C#, ASP.NET Core, SQL</span>
                        <span>Duration: 4–6 weeks • Part-time</span>
                    </div>
                </article>

                <article class="if-landing-project-card">
                    <span class="if-landing-project-tag">Design • Hybrid</span>
                    <h3 class="if-landing-project-title">Modern SaaS landing for an EdTech SME</h3>
                    <p class="if-landing-project-text">
                        Create a white + gradient SaaS landing page that explains the SME’s product to students and
                        parents with a clean, modern UI.
                    </p>
                    <div class="if-landing-project-meta">
                        <span>Skills: Figma, UI/UX, responsive design</span>
                        <span>Duration: 2–3 weeks</span>
                    </div>
                </article>

                <article class="if-landing-project-card">
                    <span class="if-landing-project-tag">Analytics • Remote</span>
                    <h3 class="if-landing-project-title">Social media insights dashboard</h3>
                    <p class="if-landing-project-text">
                        Help an SME turn raw campaign data into a clear dashboard so they can see what’s working at a glance.
                    </p>
                    <div class="if-landing-project-meta">
                        <span>Skills: Power BI, Excel, storytelling</span>
                        <span>Duration: 3–4 weeks</span>
                    </div>
                </article>
            </div>
        </section>

        <!-- FINAL CTA -->
        <section class="if-landing-section if-landing-bottom-cta">
            <div class="if-landing-bottom-card">
                <div class="if-landing-bottom-text">
                    <h2>Ready to make internships feel real?</h2>
                    <p>
                        Students get meaningful project experience. SMEs get work shipped.
                        InternForge gives both a workspace that feels like a modern SaaS product.
                    </p>
                </div>
                <div class="if-landing-bottom-actions">
                    <a href="/Account/Register" class="if-landing-cta-primary">
                        Start as Student
                    </a>
                    <a href="/Account/Register" class="if-landing-cta-secondary">
                        Start as SME
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll for section links if you add any #anchors later
        document.querySelectorAll('a[href^="#"]').forEach(link => {
            link.addEventListener("click", function (e) {
                const targetId = this.getAttribute("href").substring(1);
                const target = document.getElementById(targetId);
                if (!target) return;

                e.preventDefault();
                target.scrollIntoView({ behavior: "smooth", block: "start" });
            });
        });
    </script>
}
