<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternForge</title>

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="~/css/internforge-dashboard.css" asp-append-version="true" />

    <!-- Auto-generated styles -->
    <link rel="stylesheet" href="~/InternForge.styles.css" asp-append-version="true" />
</head>

<body class="if-body">
    <!-- IMPORTANT: applies dark theme -->
    <!-- MAIN CONTENT FROM VIEWS -->
    @RenderBody()

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - InternForge &nbsp;|&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
