<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternForge Admin</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ENjdO4Dr2bkBIFxQpeo1kM8qPZzp8Lx9Fte20cGzYl0hPQq/ErFlk3x6NfYB6zv7" crossorigin="anonymous">

    <!-- Bootstrap Icons (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/admin-layout.css" rel="stylesheet" />
</head>
<body class="admin-body">

    <div class="admin-wrapper">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar">
            <div class="admin-sidebar-header">
                <img src="~/images/internforge-logo-white.svg" alt="Logo" class="admin-logo" />
                <span class="admin-brand">InternForge</span>
            </div>

            <nav class="admin-nav">
                <a href="/Admin/Dashboard" class="admin-nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a href="/Admin/Roles" class="admin-nav-item">
                    <i class="bi bi-briefcase"></i> Internship Roles
                </a>
                <a href="/Admin/Applications" class="admin-nav-item">
                    <i class="bi bi-inboxes"></i> Applications
                </a>
                <a href="/Admin/Interns" class="admin-nav-item">
                    <i class="bi bi-people"></i> Active Interns
                </a>
                <a href="/Admin/SMEs" class="admin-nav-item">
                    <i class="bi bi-building"></i> SME Companies
                </a>
                <a href="/Admin/Users" class="admin-nav-item">
                    <i class="bi bi-person-circle"></i> Users
                </a>
                <a href="/Admin/Payments" class="admin-nav-item">
                    <i class="bi bi-credit-card"></i> Payments
                </a>
                <a href="/Admin/Settings" class="admin-nav-item">
                    <i class="bi bi-gear"></i> Settings
                </a>
            </nav>

            <div class="admin-sidebar-footer">
                <div class="admin-user">
                    <div class="admin-avatar">AD</div>
                    <div>
                        <div class="admin-username">Admin User</div>
                        <div class="admin-role">Super Admin</div>
                    </div>
                </div>
                <a href="/Account/Logout" class="admin-logout">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </aside>

        <!-- MAIN CONTENT AREA -->
        <div class="admin-main">
            <!-- TOP NAVBAR -->
            <header class="admin-topbar">
                <div class="admin-topbar-left">
                    <button class="admin-menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h2 class="admin-page-title">@ViewData["Title"]</h2>
                </div>
                <div class="admin-topbar-right">
                    <div class="admin-notification">
                        <i class="bi bi-bell"></i>
                        <span class="badge">3</span>
                    </div>
                    <div class="admin-profile-dropdown">
                        <img src="~/images/avatar-admin.jpg" alt="Admin" class="admin-profile-img" />
                        <div class="admin-dropdown-menu">
                            <a href="#">Profile</a>
                            <a href="#">Settings</a>
                            <hr />
                            <a href="/Account/Logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="admin-content">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="admin-footer">
                <p>&copy; 2025 InternForge – All Rights Reserved</p>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <!-- jQuery (CDN) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-3fpQbWQsHFn8TJ6NpZ7yO5F5m60JfKn5ZC9m13Fh4uU=" crossorigin="anonymous"></script>

    <!-- Bootstrap JS Bundle (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qyE/yD9NfS8v8Ry1Ih6ZX7gY0tt7gO/1kVZ1c4n0sZ1sx3mLQ3FSw1y+3F7GQh5T" crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script src="~/js/admin-layout.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
